@model dynamic

<header>
    <h2>Board Game Manager</h2>
</header>
<nav></nav>
<article>
    <section>
        <div id="boardGameList">
            <ul data-bind="foreach: boardGames">
                <li data-bind="event: { mouseover: $parent.selectGame }">
                    <img data-bind="attr: { src: boardGameGeekSmallImageUri }" />
                    <span data-bind="text: name" />
                </li>
            </ul>
            <!--<select multiple="multiple" data-bind="foreach: boardGames">
                <option data-bind="text: name, event: { mouseover: $parent.selectGame }" />
            </select>-->
        </div>
        <span id="retryLoadBoardGamesMessage">Unable to load board games.  Please <a href="" id="retryLoadBoardGamesLink">retry</a>.</span>
        <div id="boardGameListWaitingIndicator"></div>
    </section>
</article>
<aside>
    <section id="selectedBoardGameDetails" data-bind="with: selectedGame">
        <table>
            <tr>
                <td><img data-bind="attr: { src: boardGameGeekMediumImageUri }" /></td>
            </tr>
            <tr>
                <td>Name</td><td data-bind="text: name"></td>
            </tr>
            <tr>
                <td>Min Players</td><td data-bind="text: minPlayers"></td>
            </tr>
            <tr>
                <td>Max Players</td><td data-bind="text: maxPlayers"></td>
            </tr>
            <tr>
                <td>Min Minutes To Play</td><td data-bind="text: minMinutesToPlay"></td>
            </tr>
            <tr>
                <td>Max Minutes To Play</td><td data-bind="text: maxMinutesToPlay"></td>
            </tr>
            <tr>
                <td colspan="2">
                    <a data-bind="attr: { href: boardGameGeekReviewUri }" target="_blank">Review</a>
                </td>
            </tr>
        </table>
    </section>
</aside>
<footer></footer>
